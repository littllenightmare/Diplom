<Window x:Class="HomeMenu.Windows.AddPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeMenu.Windows"
        mc:Ignorable="d"
        Title="Добавить блюдо" Icon="/Images/Icon.png" Height="800" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Image x:Name="PhotoImage" Grid.ColumnSpan="2" Grid.RowSpan="5" MouseLeftButtonUp="LoadImageClick"/>
        <TextBlock Text="Название" Grid.Column="2" Grid.ColumnSpan="2" FontFamily="Corbel" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Column="4" FontFamily="Corbel" FontSize="25" Grid.ColumnSpan="2"/>
        <TextBlock Text="Калории" Grid.Column="2" Grid.Row="1" FontFamily="Corbel" FontSize="25"/>
        <TextBox x:Name="CaloriesTextBox" Grid.Column="3" FontFamily="Corbel" FontSize="25" Grid.Row="1"/>
        <TextBlock Text="Белки" Grid.Column="4" Grid.Row="1" FontFamily="Corbel" FontSize="25"/>
        <TextBox x:Name="ProteinsTextBox" Grid.Column="5" FontFamily="Corbel" FontSize="25" Grid.Row="1"/>
        <TextBlock Text="Жиры" Grid.Column="2" Grid.Row="2" FontFamily="Corbel" FontSize="25"/>
        <TextBox x:Name="FatsTextBox" Grid.Column="3" FontFamily="Corbel" FontSize="25" Grid.Row="2"/>
        <TextBlock Text="Углеводы" Grid.Column="4" Grid.Row="2" FontFamily="Corbel" FontSize="25"/>
        <TextBox x:Name="CarbohydratesTextBox" Grid.Column="5" FontFamily="Corbel" FontSize="25" Grid.Row="2"/>
        <TextBlock Text="Порции" Grid.Column="2" Grid.Row="3" FontFamily="Corbel" FontSize="25"/>
        <TextBox x:Name="PortionsTextBox" Grid.Column="3" FontFamily="Corbel" FontSize="25" Grid.Row="3"/>
        <TextBlock Text="Сложность" Grid.Column="4" Grid.Row="3" FontFamily="Corbel" FontSize="25"/>
        <ComboBox x:Name="DifficultComboBox" Background="LightBlue" BorderBrush="CornflowerBlue" Grid.Column="5" FontFamily="Corbel" FontSize="25" Grid.Row="3"/>
        <TextBlock Text="Время приготовления" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" FontFamily="Corbel" FontSize="25"/>
        <TextBlock Text="ч." Grid.Column="4" Grid.Row="4" FontFamily="Corbel" FontSize="25" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="HoursTextBox" Grid.Column="4" FontFamily="Corbel" FontSize="25" Grid.Row="4" HorizontalAlignment="Left" Margin="5,0"/>
        <TextBlock Text="мин." Grid.Column="5" Grid.Row="4" FontFamily="Corbel" FontSize="25" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="MinutesTextBox" Grid.Column="5" FontFamily="Corbel" FontSize="25" Grid.Row="4" HorizontalAlignment="Left" Margin="5,0"/>
        <Border BorderThickness="5" Grid.ColumnSpan="3" Grid.Row="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Ингредиенты" Grid.ColumnSpan="2" FontFamily="Corbel" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="IngredientsList">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding Amount}" Margin="5,0" TextAlignment="Right" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="гр." Margin="5,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    <Button Grid.Column="2" Content="✕" FontSize="14" Width="30" Height="30" Click="DeleteIngridientClick" Background="Transparent" BorderBrush="Transparent" Foreground="Red" FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                <Image MouseLeftButtonUp="AddIngridientClick" Source="/Images/add.png" Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <StackPanel Grid.Column="1" Grid.Row="1">
                    <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged" FontFamily="Corbel" FontSize="20" Padding="5"/>
                    <ListBox x:Name="SearchListBox" MouseDoubleClick="SearchListBox_MouseDoubleClick" Margin="10" MaxHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Рецепт" FontFamily="Corbel" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBox x:Name="RecipeTextBox" Grid.Row="1" FontFamily="Corbel" FontSize="25" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" KeyDown="RecipeTextBox_KeyDown"/>
            </Grid>
        </Border>
        <Button Content="Назад" Click="ReturnClick" Grid.Row="6" FontFamily="Corbel" Grid.ColumnSpan="2" FontSize="25" HorizontalAlignment="Center" Width="200" Background="LightBlue" BorderBrush="CornflowerBlue" BorderThickness="5" VerticalAlignment="Center"/>
        <Button Content="Сохранить" Click="SaveClick" Grid.Row="6" FontFamily="Corbel" Grid.ColumnSpan="2" Grid.Column="4" FontSize="25" HorizontalAlignment="Center" Width="200" Background="LightBlue" BorderBrush="CornflowerBlue" BorderThickness="5" VerticalAlignment="Center"/>
    </Grid>
</Window>
